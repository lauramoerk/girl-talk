---
const { color, firstLine, secondLine, themeHeader } = Astro.props;
---

<section class="QuoteHeadingSection">
  <p class="theme-header" >{themeHeader}</p>
  <div class:list={["line-one-container", color]}>
    <img src="/images/quote.svg" alt="" /><p class="secondary-header-quote">{firstLine}</p>
  </div>
  <div class:list={["line-two-container", color]}>
    <p class="secondary-header-quote">{secondLine}</p>
  </div>
</section>

<style>
  div {
    width: 70vw;
    border-radius: 8px;
    padding: 15px 15px;
    width: fit-content;
  }

  .line-one-container {
    display: flex;
    gap: 20px;
    margin-left: 0px;
    border-radius: 8px 8px 0 8px;
  }

  .line-two-container {
    margin-left: 80px;
    border-radius: 0px 8px 8px 8px;
  }


.secondary-header-quote {
    font-size: 4vw !important;
  }

  .pink {
    background-color: var(--color-pink);
  }

  .green {
    background-color: var(--color-green);
  }

  .purple {
    background-color: var(--color-purple);
  }

.theme-header{
  font-size: var(--font-size-medium);
  font-weight: var(--font-weight-semibold);
}


@media only screen and (min-width: 600px){

  .secondary-header-quote {
    font-size: 2vw !important;
  }

}


  
</style>
