---
const { color, firstLine, secondLine, themeHeader } = Astro.props;
---
<p class="themeheader" >{themeHeader}</p>
<section class="QuoteHeadingSection">
  <div class:list={["line-one-container", color]}>
    <img src="/images/quote.svg" alt="" /><p class="secondary-header">{firstLine}</p>
  </div>
  <div class:list={["line-two-container", color]}>
    <p class="secondary-header">{secondLine}</p>
  </div>
</section>

<style>
  div {
    width: 70vw;
    border-radius: 8px;
    padding: 15px 15px;
    width: fit-content;
  }

  .line-one-container {
    display: flex;
    gap: 20px;
    margin-left: 10px;
    border-radius: 8px 8px 0 8px;
  }

  .line-two-container {
    margin-left: 80px;
    border-radius: 0 8px 8px 0;
  }

  .line-three-container {
    margin-left: 60px;
    border-radius: 0 0 8px 8px;
  }

 .QuoteHeadingSection p {
    font-size: 4vw !important;
  }

  .pink {
    background-color: var(--color-pink);
  }

  .green {
    background-color: var(--color-green);
  }

  .purple {
    background-color: var(--color-purple);
  }
</style>
