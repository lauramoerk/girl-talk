---
const { color, firstLine, secondLine, thirdLine } = Astro.props;
---

<section class="QuoteSection">
  <div class:list={["line-one-container", color]}>
    <img src="/images/quote.svg" alt="" /><p class="highlighted-quote">{firstLine}</p>
  </div>
  <div class:list={["line-two-container", color]}>
    <p class="highlighted-quote">{secondLine}</p>
  </div>
  <div class:list={["line-three-container", color]}>
    <p class="highlighted-quote">{thirdLine}</p>
  </div>
</section>

<style>
  div {
    width: 70vw;
    border-radius: 8px;
    padding: 15px 25px;
    width: fit-content;
  }

  .line-one-container {
    display: flex;
    gap: 20px;
    margin-left: 20px;
    border-radius: 8px 8px 0 8px;
  }

  .line-two-container {
    margin-left: 60px;
    border-radius: 0 8px 8px 0;
  }

  .line-three-container {
    margin-left: 60px;
    border-radius: 0 0 8px 8px;
  }

  p {
    font-size: 3vw !important;
  }

  .pink {
    background-color: var(--color-pink);
  }

  .green {
    background-color: var(--color-green);
  }

  .purple {
    background-color: var(--color-purple);
  }
</style>
