---
import Category from "./Category.astro"
const { category, header, link, alt  } = Astro.props;
---

<div class="ArticleCard">
    <img src={link} alt={alt}>

    <Category {header} {category}/>

</div>

<style>
div.ArticleCard {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    width: 220px;
}

img{
    height: 280px;
    width: fit-content;
    border-radius: 8px;
}

@media only screen and (min-width: 900px){
    .ArticleCard {
    width: 350px;
}

.ArticleCard img{
    height: 300px;
}
}


</style>