---
import Category from "./Category.astro"
const { category, header, link, alt  } = Astro.props;
---

<div class="ArticleCard">
    <img src={link} alt={alt}>

    <Category {header} {category}/>

</div>

<style>
div.ArticleCard {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    width: auto;
    height:auto;
}

.ArticleCard img{
    width: 100%;
    border-radius: 8px;
}

@media only screen and (min-width: 900px){
    .ArticleCard {
    width: 310px;
}

.ArticleCard img{
    height: 300px;
}
}


</style>