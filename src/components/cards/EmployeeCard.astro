---

const { link, alt, name, email, title } = Astro.props;

---

<div class="EmployeeCard">
<img src={link} alt={alt}>
<p>{name}</p>
<p>{title}</p>
<a href="mailto:"{email}>{email}</a>
</div>

<style>
div.EmployeeCard {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    width: auto;
    height:auto;
}

.EmployeeCard p{
    max-width: 200px;
}

.EmployeeCard img{
    width: 100%;
    border-radius: 8px;
}

@media only screen and (min-width: 600px){
    .EmployeeCard {
    width: 250px;
}

.EmployeeCard img{
    height: 300px;
    object-fit: cover;
}
}


</style>