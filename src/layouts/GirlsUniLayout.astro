---
import NavSecondary from "../components/ui/NavSecondary.astro";
import Footer from "../components/ui/Footer.astro";
import "../styles/global.scss";
const { title = "GirlTalk" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="wrapper">
      <NavSecondary />
      <main>
        <slot>Default</slot>
      </main>
      <Footer />
    </div>
  </body>
</html>

<style>
  .wrapper {
    overflow: hidden;
    display: grid;
    grid-template-rows: auto 1fr auto;
    min-height: 100vh;
  }

  main {
    display: grid;
    gap: 20px;
    margin: 0 20px;
  }
</style>
